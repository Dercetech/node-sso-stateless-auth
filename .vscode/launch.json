  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch API",
      "program": "${workspaceFolder}\\api\\main.js",
      "env": { "api": "on", "tokenSecret": "IcanHasCheezburger" }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Auth µService",
      "program": "${workspaceFolder}\\auth\\main.js",
      "env": { "auth": "on", "tokenSecret": "IcanHasCheezburger" }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch firewall",
      "program": "${workspaceFolder}\\firewall\\main.js",
      "env": { "fw": "on", "tokenSecret": "IcanHasCheezburger" }
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Gulp > API",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "args": ["api"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Gulp > Auth µService",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "args": ["auth"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Gulp > Firewall",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "args": ["firewall"]
    }
  ]
}
